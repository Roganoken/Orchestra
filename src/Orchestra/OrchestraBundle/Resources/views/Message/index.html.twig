{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_messagerie_index.css') }}" type="text/css" media="all" />
{% endblock %}


{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}


{% block contenu %}

<div id="contenu">

    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}
        
    <div class="content_form_edit">  
  
      <div id="actions_gauche">   
      
              <div class="bloc_tuto">
                    <div class="titre_bloc">
                        <div class="picto_tutorat_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_tutorat.png') }}" alt="" /></div>
                        <div class="txt_titre_bloc"><p>Messagerie</p></div>
                    </div>
                    
                    <div class="bloc_contenu_tuto">   
                       {% for entity in entities %}
                            <div class="records_list">
                                <div class="emetteur">Bla bla</div>
                                <div class="date">{{ entity.created|format_datetime(null, 'fr', 'Europe/Paris', constant('IntlDateFormatter::LONG'), constant('IntlDateFormatter::SHORT')) }}</div>
      
                                <div class="contenu_msg">{{ entity.contenu|slice(0, 50) }} [...]</div>

                                <div class="picto_detail"><a href="{{ path('message_show', { 'id': entity.id }) }}"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_voir_profil_vide.png') }}" alt="" /></a></div>
                            </div>

                        {% endfor %}

                    </div>
                </div>   
       </div>
       
       <div class="titre_bloc_ajout">
            <div class="picto_tutorat_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_tutorat.png') }}" alt="" /></div>
            <div class="txt_titre_bloc"><a href="{{ path('message_new') }}"><p>Envoyer un message</p></a></div>
        </div>


   </div>
</div>

{% endblock %} 
