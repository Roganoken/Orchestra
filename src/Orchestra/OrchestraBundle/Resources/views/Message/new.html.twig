{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_messagerie_new.css') }}" type="text/css" media="all" />
{% endblock %}


{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}


{% block contenu %}

<div id="contenu">

    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}
       
    <div class="content_form_edit">  
  
      <div id="actions_gauche">   
      
              <div class="bloc_tuto">
                    <div class="titre_bloc">
                        <div class="picto_tutorat_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_tutorat.png') }}" alt="" /></div>
                        <div class="txt_titre_bloc"><p>Ecrire un message</p></div>
                    </div>
                    
                    <div class="bloc_contenu_tuto">  

                        <form action="{{ path('message_create') }}" method="post" {{ form_enctype(form) }}>
                            {{ form_widget(form) }}
                            <p>
                                <button class="btn_envoyer" type="submit">Envoyer</button>
                            </p>
                        </form>


                    </div>
              </div>   
       </div>
       
        <div class="titre_bloc_ajout">
            <div class="picto_tutorat_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_tutorat.png') }}" alt="" /></div>
            <div class="txt_titre_bloc"><a href="{{ path('message') }}"><p>Revenir aux messages</p></a></div>
        </div>


   </div>

</div>

{% endblock %} 
