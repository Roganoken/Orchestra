{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}

    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_avatar.css') }}" type="text/css" media="all" />
{% endblock %}


{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}

{% block contenu %}

<div id="contenu">
    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}

        
        <div id="content_form_edit">
           
           <div id="form_edit">
           
               <h1>Charger une image de profil</h1>
                
                {% if entity.photo %}
                    <img src="{{ ('avatar/' ~ entity.photo) | apply_filter('my_thumb') }}" />
                {% else %}
                    <img src="{{ ('avatar/default.jpg') | apply_filter('my_thumb') }}" />
                {% endif %}
                
                <form action="#" method="post" {{ form_enctype(form) }}>
                    {{ form_widget(form) }}
                    <button type="submit">Uploader</button>
                </form>

            </div>
            
            <div id="actions_droite">    
                <a href="{{ path('user') }}">
                   Revenir Ã  la liste des utilisateurs
                </a>
            </div>
            
         </div>
</div>


{% endblock %}  
         