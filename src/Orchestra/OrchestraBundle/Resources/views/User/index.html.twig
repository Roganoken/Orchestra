<h1>User list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Username</th>
            <th>Password</th>
            <th>Birthdate</th>
            <th>Photo</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Mobilephone</th>
            <th>Ldap</th>
            <th>Connected</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Isprofesseur</th>
            <th>Iseleve</th>
            <th>Iscontact</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.firstname }}</td>
            <td>{{ entity.lastname }}</td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.password }}</td>
            <td>{% if entity.birthdate %}{{ entity.birthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.photo }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.phone }}</td>
            <td>{{ entity.mobilePhone }}</td>
            <td>{{ entity.ldap }}</td>
            <td>{% if entity.connected %}{{ entity.connected|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.isProfesseur }}</td>
            <td>{{ entity.isEleve }}</td>
            <td>{{ entity.isContact }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('user_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
