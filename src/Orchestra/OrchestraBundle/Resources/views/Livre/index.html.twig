{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_bibli_index.css') }}" type="text/css" media="all" />
{% endblock %}

{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}

{% block contenu %}

<div id="contenu">
    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}

<div id="content">    
    
        {% render 'OrchestraOrchestraBundle:Livre:lastEntry' %}
        
    
        <div id="bloc_emprunts">
            <div class="titre_bloc">
                <div class="picto_bibli_titre"><img height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_biblio.png') }}" alt="" /></div>
                <div class="txt_titre_bloc"><p>Mes emprunts</p></div>
               
            </div>
            
            <nav class="bloc_tab">
                <ul>
                    <li class="bloc_li bloc_li_donnees_width">Titre 1 : <span>{# entity.firstname #}</span></li>
                    <li class="bloc_li bloc_li_donnees_width">Titre 1 : <span>{# entity.firstname #}</span></li>
                    <li class="bloc_li bloc_li_donnees_width">Titre 1 : <span>rendu{# entity.firstname #}</span></li>
                    <li class="bloc_li bloc_li_donnees_width">Titre 1 : <span>consulté{# entity.firstname #}</span></li>
                </ul>
            </nav>
        </div>
              
              
              
              <div class="bloc_biblio">
                    <div class="titre_bloc">
                        <div class="picto_bibli_titre"><img height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_biblio.png') }}" alt="" /></div>
                        <div class="txt_titre_bloc"><p>Derniers ajouts dans la bibliothèque</p></div>
                    </div>
                    
                    <div class="bloc_contenu_tuto">   
                        <div id="biblio">
    
                           {% render 'OrchestraOrchestraBundle:Livre:lastEntries' %}
                            
                        </div>
                    </div>
                </div>  
              
              
              <div class="bloc_biblio">
                    <div class="titre_bloc">
                        <div class="picto_bibli_titre"><img height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_biblio.png') }}" alt="" /></div>
                        <div class="txt_titre_bloc"><p>Bibliothèque</p></div>
                        {% if is_granted("ROLE_ADMIN") %}
                        <div class="lien_ajout"><a href="{{ path ('livre_new')}}">Ajouter un livre</a></div>
                        {% endif %}
                    </div>
                    
                    <div class="bloc_contenu_tuto">   
                          {% render 'OrchestraOrchestraBundle:Livre:liste' %}

                    </div>
                </div>  

</div>



</div>
{% endblock %} 