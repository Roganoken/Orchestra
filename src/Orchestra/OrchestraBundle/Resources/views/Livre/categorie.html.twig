{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_bibli_categorie.css') }}" type="text/css" media="all" />
{% endblock %}

{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}

{% block contenu %}

<div id="contenu">
    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}

<div id="content">     
     
     <div class="titre_bloc retour_bibli">
        <div class="picto_bibli_titre"><img height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_biblio.png') }}" alt="" /></div>
        <div class="txt_titre_bloc">
            <a href="{{ path('livre') }}">Revenir à la bibliothèque</a>
        </div>
    </div>         
              
    <div class="bloc_biblio">
        <div class="titre_bloc">
            <div class="picto_bibli_titre"><img height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_biblio.png') }}" alt="" /></div>
            <div class="txt_titre_bloc"><p>Bibliothèque</p></div>
            {% if is_granted("ROLE_ADMIN") %}
            <div class="lien_ajout"><a href="{{ path ('livre_new')}}">Ajouter un livre</a></div>
            {% endif %}
        </div>
        
        <div class="bloc_contenu_tuto">   
            
            
            <div id="nav_theme">
    
               {% render 'OrchestraOrchestraBundle:Livre:menu' %}
    
            </div>
    
            <div id="biblio">
                {% if livres|length != 0 %}
                {% for entity in livres %}
                    <div class="livre">
                        <a href="{{ path('livre_show', { 'id': entity.id }) }}">
                            <div class="img_biblio">
                                {% if entity.illustration %}
                                    <img src="{{ ('bibliotheque/' ~ entity.illustration) | apply_filter('illustration_list') }}" alt="avatar" />
                                {% else %}
                                    <img src="{{ ('bibliotheque/default.jpg') | apply_filter('illustration_list') }}" alt="avatar" />
                                {% endif %}
                            </div>
                            <div class="titre_livre">{{ entity.titre  }}</div>
                            <div class="dispo_livre">disponible</div>
                        </a>
                    </div>
                {% endfor %}
                              {% else %}
                              Pas encore de livres
                              {% endif %}
             </div>
    
        </div>
    </div>  

</div>



</div>
{% endblock %} 
