{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}

    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_bibli_illustration.css') }}" type="text/css" media="all" />
{% endblock %}


{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}

{% block contenu %}

<div id="contenu">
    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}

   <div id="content">        
        <div id="content_form_edit">
           
           <div id="form_edit">
               <div class="bloc_tuto width_tuto">

                    <div class="titre_bloc">
                        <div class="picto_biblio_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_perso.png') }}" alt="" /></div>
                        <div class="txt_titre_bloc"><p>Charger l'illustration</p></div>
                    </div>
                    
                    <div class="bloc_contenu_tuto width_contenu_tuto">
                        
                        {% if entity.illustration %}
                            <img src="{{ ('bibliotheque/' ~ entity.illustration) | apply_filter('illustration_list') }}" />
                        {% else %}
                            <img src="{{ ('bibliotheque/default.jpg') | apply_filter('illustration_list') }}" />
                        {% endif %}
                        
                            <form action="#" method="post" {{ form_enctype(form) }}>
                                {{ form_widget(form) }}
                                <button type="submit">Uploader</button>
                            </form>

                    </div>
                </div> 

            </div>
            
            <div id="actions_droite">   
                <div class="titre_bloc retour_tuto">
                    <div class="picto_biblio_titre"><img height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_biblio.png') }}" alt="" /></div>
                    <div class="txt_titre_bloc">
                        <a href="{{ path ('livre') }}">Revenir à la bibliothèque</a>
                    </div>
                </div>
            </div>
            
         </div>
         
         <div id="vide"></div>
         
    </div>
</div>


{% endblock %}  
         