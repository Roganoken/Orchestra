{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_tutorat_index.css') }}" type="text/css" media="all" />
{% endblock %}

{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}

{% block contenu %}

<div id="contenu">
    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}
  <div class="content_form_edit">  
  
      <div id="actions_gauche"> 
    </div>
      
      <h1>Livre</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Isbn</th>
            <td>{{ entity.isbn }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ entity.titre }}</td>
        </tr>
        <tr>
            <th>Resume</th>
            <td>{{ entity.resume }}</td>
        </tr>
        <tr>
            <th>Annee</th>
            <td>{{ entity.annee|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Illustration</th>
            <td>{{ entity.illustration }}</td>
        </tr>
        <tr>
            <th>Datereservation</th>
            <td>{{ entity.dateReservation|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Dateemprunt</th>
            <td>{{ entity.dateEmprunt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Dateretour</th>
            <td>{{ entity.dateRetour|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ time_diff(entity.created) }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ time_diff(entity.updated) }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('livre') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('livre_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('livre_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

</div>
</div>
{% endblock %} 
