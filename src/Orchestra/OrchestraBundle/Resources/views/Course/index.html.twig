<h1>Course list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Fullname</th>
            <th>Description</th>
            <th>Exam</th>
            <th>Program</th>
            <th>Duration</th>
            <th>Start</th>
            <th>End</th>
            <th>Coefficient</th>
            <th>Isqualifying</th>
            <th>Isfede</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('course_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.fullName }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.exam }}</td>
            <td>{{ entity.program }}</td>
            <td>{{ entity.duration }}</td>
            <td>{% if entity.start %}{{ entity.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.end %}{{ entity.end|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.coefficient }}</td>
            <td>{{ entity.isQualifying }}</td>
            <td>{{ entity.isFede }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('course_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('course_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('course_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
