<h1>City list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Postalcode</th>
            <th>Ucart</th>
            <th>Ucname</th>
            <th>Art</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('city_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.postalCode }}</td>
            <td>{{ entity.ucArt }}</td>
            <td>{{ entity.ucName }}</td>
            <td>{{ entity.art }}</td>
            <td>{{ entity.name }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('city_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('city_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('city_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
