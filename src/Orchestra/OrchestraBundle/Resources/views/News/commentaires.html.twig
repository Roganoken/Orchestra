<h1>Commentaires</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Contenu</th>
            <th>By</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for commentaire in commentaires %}
        <tr>
            <td>{{ commentaire.contenu }}</td>
            <td>{{ commentaire.user.firstname }} {{ commentaire.user.lastname }}</td>
            <td>{% if commentaire.created %}{{ time_diff(commentaire.created) }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('commentaire_show', { 'id': commentaire.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('commentaire_edit', { 'id': commentaire.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
