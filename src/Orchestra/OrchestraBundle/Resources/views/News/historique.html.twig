{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_news_index.css') }}" type="text/css" media="all" />
{% endblock %}


{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}


{% block contenu %}

<div id="contenu">
    
    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}
    <div id="content"> 
           <div class="content_form_edit">  
  
      <div id="actions_gauche">       
            
            <div class="bloc_tuto">
        
                <div class="titre_bloc">
                    <div class="picto_tutorat_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_tutorat.png') }}" alt="" /></div>
                    <div class="txt_titre_bloc"><p>Historique des actualités</p></div>
                </div>
                
                <div class="bloc_contenu_tuto">   
                    {% for historique in historiques %}

                        <div class="records_list">
                            <div class="intitule">{{ historique.title }}</div>
                            <div class="picto_detail"><a href="{{ path('news_show', { 'id': historique.id }) }}"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_voir_profil_vide.png') }}" alt="" /></a></div>



                            <div class="contenu_actu">{{ historique.content|slice(0, 50) }} [...]</div>

                            <div class="ajout_par">Ajouté par <a href="{{ path('OrchestraOrchestraBundle_profil', { 'id': historique.User.id }) }}">{{ historique.User.firstname }} {{ historique.User.lastname }}</a></div>

                            {% if is_granted("ROLE_ADMIN") or historique.User.id == app.security.getToken().getUser().getId() %}
                               <div class="picto_modif_tuto"><a href="{{ path('news_edit', { 'id': historique.id }) }}"><img src="{{ asset ('bundles/orchestraorchestra/img/picto_modif.png') }}" alt="" /></a></div>
                            {% endif %}
                            
                        </div>


                        {% endfor %}

                        <div class="liste_complete"><a href="{{ path('news') }}">Revenir aux actualités</a></div>
                        
                        <div class="navigation">
                            {{ knp_pagination_render(historiques) }}
                        </div>  
                        
                </div>
    

            </div>  
            
                      
    </div>
   </div> 
   
   <div id="vide_bis"></div>
   
</div>
</div>
{% endblock %}

