{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_image_edit.css') }}" type="text/css" media="all" />
{% endblock %}


{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}


{% block contenu %}

<div id="contenu">
    
    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}
   <div id="content">   
           <div id="breadcrumb">
            <a href="{{ path ('OrchestraOrchestraBundle_accueil') }}"><img src="{{ asset ('bundles/orchestraorchestra/img/home_breadcrumb.png') }}" alt="Accueil" /></a>> <a href="">Galeries</a>> Modifier une image
            </div>
            
           <div id="form_edit">        
                <div class="bloc_tuto width_tuto">

                    <div class="titre_bloc">
                        <div class="picto_portfolio"><img  height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_galerie.png') }}" alt="" /></div>
                        <div class="txt_titre_bloc"><p>Modifier l'image</p></div>
                    </div>
                    
                    <div class="bloc_contenu_tuto width_contenu_tuto">  

            <form action="{{ path('image_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            
                {{ form_errors(edit_form) }}
            
                <div class="form_row">{{ form_row(edit_form.titre, {'label': 'Titre'}) }}</div>
                <div class="form_row">{{ form_row(edit_form.descriptif, {'label': 'Descriptif'}) }}</div>
                <div class="form_row">{{ form_row(edit_form.dateCreation, {'label': 'Date de création'}) }}</div>
                <div class="form_row">{{ form_row(edit_form.logiciel, {'label': 'Logiciel'}) }}</div>
                <div class="form_row">{{ form_row(edit_form.media, {'label': 'Média'}) }}</div>
                
                {{ form_widget(edit_form._token) }}
                <p>
                    <button class="btn_modif" type="submit">Modifier</button>
                </p>
            </form>
            
            

                     </div>
                </div> 

           </div>
           
           <ul id="actions_droite">
            
                <div class="titre_bloc retour_tuto">
                    <div class="picto_portfolio"><img height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_galerie.png') }}" alt="" /></div>
                    <div class="txt_titre_bloc">
                        <a href="javascript: history.go(-1)" title="revenir" alt="revenir">Revenir</a>
                    </div>
                </div>


                        
                <div class="titre_bloc retour_tuto">
                    <div class="picto_portfolio"><img height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_galerie.png') }}" alt="" /></div>
                    <div class="txt_titre_bloc">
                        <form action="{{ path('image_delete', { 'id': entity.id }) }}" method="post">
                            {{ form_widget(delete_form) }}
                            <button class="btn_supp" type="submit">Supprimer</button>
                        </form>
                    </div>
                </div>
       
            </ul>

 </div>
</div>

{% endblock %}

