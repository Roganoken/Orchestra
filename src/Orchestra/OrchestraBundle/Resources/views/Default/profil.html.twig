{% extends '::base.html.twig' %}


{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_profil.css') }}" type="text/css" media="all" />
{% endblock %}

{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}

{% block contenu %}

<div id="contenu">
    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}
    
    <div id="bloc_avatar">
        <div id="bloc_carre_avatar">
         {% if entity.photo %}
            <img src="{{ ('avatar/' ~ entity.photo) | apply_filter('my_thumb') }}" alt="avatar" />
        {% else %}
            <img src="{{ ('avatar/default.jpg') | apply_filter('my_thumb') }}" alt="avatar" />
        {% endif %}
        </div>
        <div id="txt_bloc_avatar">
            <nav>
                <ul>
                    <li class="bloc_li bloc_li_avatar_width">Nom : <span>{{ entity.firstname }}</span></li>
                    <li class="bloc_li bloc_li_avatar_width">Prénom : <span>{{ entity.lastname }}</span></li>
                    <li class="bloc_li bloc_li_avatar_width">Classe : <span>{{ entity.classe }}</span></li>
                    <li class="bloc_li bloc_li_avatar_width">Statut : <span>Etudiant</span></li>
                </ul>
            </nav>
         </div>
    </div>
    

    <div id="bloc_donnees_perso">
        <div class="titre_bloc">
            <div class="picto_perso"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_perso.png') }}" alt="" /></div>
            <div class="txt_titre_bloc"><p>Mes données personnelles</p></div>
            {% if entity.id == app.security.getToken().getUser().getId() or is_granted("ROLE_ADMIN") %}
            <div class="picto_modif"><a href="{{ path ('user_edit', { 'id': entity.id })}}"><img src="{{ asset ('bundles/orchestraorchestra/img/picto_modif.png') }}" alt="" /></a></div>
            {% endif %}
        </div>
        
        <nav class="bloc_tab">
            <ul>
                <li class="bloc_li bloc_li_donnees_width">Adresse : <span>44 Rue de la faiencerie</span></li>
                <li class="bloc_li bloc_li_donnees_width">Tél : <span>{% if entity.mobilePhone %}{{ entity.mobilePhone }}{% else %}non renseigné{% endif %}</span></li>
                <li class="bloc_li bloc_li_donnees_width">Mail : <span>{{ entity.email }}</span></li>
                <li class="bloc_li bloc_li_donnees_width">Site Web : <span>www.estei.fr</span></li>
            </ul>
        </nav>
    </div>

</div>

{% endblock %}
