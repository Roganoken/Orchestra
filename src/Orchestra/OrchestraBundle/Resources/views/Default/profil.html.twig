{% extends '::base.html.twig' %}


{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_profil.css') }}" type="text/css" media="all" />
{% endblock %}

{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}

{% block contenu %}

<div id="contenu">
    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}
    
    <div id="content">
        <div id="breadcrumb">
            <a href="{{ path ('OrchestraOrchestraBundle_accueil') }}"><img src="{{ asset ('bundles/orchestraorchestra/img/home_breadcrumb.png') }}" alt="Accueil" /></a>> Profil
        </div>
        <div id="bloc_avatar">
            <div id="bloc_carre_avatar">
                
                     {% if entity.photo %}
                        <img src="{{ ('avatar/' ~ entity.photo) | apply_filter('my_thumb') }}" alt="avatar" />
                    {% else %}
                        <img src="{{ ('avatar/default.jpg') | apply_filter('my_thumb') }}" alt="avatar" />
                    {% endif %}
                <a href="{{ path('user_avatar',{ 'id': entity.id }) }}"><div id="rollover_avatar"></div></a>
            </div>
            <div id="txt_bloc_avatar">
                <nav>
                    <ul>
                        <li class="bloc_li bloc_li_avatar_width">Nom : <span>{{ entity.firstname }}</span></li>
                        <li class="bloc_li bloc_li_avatar_width">Prénom : <span>{{ entity.lastname }}</span></li>
                        <li class="bloc_li bloc_li_avatar_width">Classe : <span>{{ entity.classe }}</span></li>
                        <li class="bloc_li bloc_li_avatar_width">Statut : <span>Etudiant</span></li>
                    </ul>
                </nav>
             </div>
        </div>
        
    
        <div id="bloc_donnees_perso">
            <div class="titre_bloc">
                <div class="picto_profil"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_perso.png') }}" alt="" /></div>
                <div class="txt_titre_bloc"><p>Mes données personnelles</p></div>
                {% if entity.id == app.security.getToken().getUser().getId() or is_granted("ROLE_ADMIN") %}
                <div class="picto_modif"><a href="{{ path ('user_edit', { 'id': entity.id })}}"><img src="{{ asset ('bundles/orchestraorchestra/img/picto_modif.png') }}" alt="" /></a></div>
                {% endif %}
            </div>
            
            <nav class="bloc_tab">
                <ul>
                    <li class="bloc_li bloc_li_donnees_width">Adresse : <span>44 Rue de la faiencerie</span></li>
                    <li class="bloc_li bloc_li_donnees_width">Tél : <span>{% if entity.mobilePhone %}{{ entity.mobilePhone }}{% else %}non renseigné{% endif %}</span></li>
                    <li class="bloc_li bloc_li_donnees_width">Mail : <span>{{ entity.email }}</span></li>
                    <li class="bloc_li bloc_li_donnees_width">Site Web : <span>www.estei.fr</span></li>
                </ul>
            </nav>
        </div>
        
        <div id="bloc_notes">
            <div class="titre_bloc_3">
                <div class="picto_profil"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_perso.png') }}" alt="" /></div>
                <div class="txt_titre_bloc"><p>Mes dernières notes</p></div>
            </div>
            
            <nav class="bloc_tab_3">
                <ul>
                    <li class="bloc_li bloc_li_3">Communication Visuelle : <span>15</span></li>
                    <li class="bloc_li bloc_li_3">Arts Plastiques : <span>12</span></li>
                    <li class="bloc_li bloc_li_3">Arts Appliqués : <span>14</span></li>
                    <li class="bloc_li bloc_li_3">Photoshop : <span>16</span></li>
                    <a href=""><li class="bloc_li bloc_li_3 all">voir toutes mes notes</li></a>
                </ul>
            </nav>
        </div>
        <div id="bloc_absences">
            <div class="titre_bloc_3">
                <div class="picto_profil"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_perso.png') }}" alt="" /></div>
                <div class="txt_titre_bloc"><p>Mes absences</p></div>
            </div>
            
            <nav class="bloc_tab_3">
                <ul>
                    <li class="bloc_li bloc_li_3">Retard(s) : <span>2</span></li>
                    <li class="bloc_li bloc_li_3">Demi-journée(s) : <span>1</span></li>
                    <li class="bloc_li bloc_li_3">Justifiée(s) : <span>1</span></li>
                    <li class="bloc_li bloc_li_3">Injustifiée(s) : <span>0</span></li>
                    <a href=""><li class="bloc_li bloc_li_3 all">voir toutes mes absences</li></a>
                </ul>
            </nav>
        </div>
        <div id="bloc_evt">
            <div class="titre_bloc_3">
                <div class="picto_evt"><img  height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_evt.png') }}" alt="" /></div>
                <div class="txt_titre_bloc"><p>évènements à venir</p></div>
            </div>
                
                    {% render 'OrchestraOrchestraBundle:Evenement:miniListe' %}
        </div>
        
        <div id="bloc_portfolio">
            <div class="titre_bloc_1">
                <div class="picto_portfolio"><img  height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_galerie.png') }}" alt="" /></div>
                <div class="txt_titre_bloc"><p>Mon portfolio</p></div>
                {% if entity.id == app.security.getToken().getUser().getId() or is_granted("ROLE_ADMIN") %}
                    <div class="picto_modif"><a href="{{ path ('user_edit', { 'id': entity.id })}}"><img src="{{ asset ('bundles/orchestraorchestra/img/picto_modif.png') }}" alt="" /></a></div>
                {% endif %}
            </div>
            <div id="portfolio"> 
               {% render 'OrchestraOrchestraBundle:Galerie:magalerie' with {id: entity.id} %}
            </div>
    </div>

</div>
</div>

{% endblock %}
