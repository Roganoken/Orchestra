{% extends '::base.html.twig' %}


{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_accueil.css') }}" type="text/css" media="all" />
{% endblock %}

{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}

{% block contenu %}

<div id="contenu">
    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}
    
    <div id="content">
        <div id="breadcrumb">
            <a href=""><img src="{{ asset ('bundles/orchestraorchestra/img/home_breadcrumb.png') }}" alt="Accueil" /> Accueil</a>
        </div>
        
        <div id="actus">   
              <div class="bloc_actus">
                    <div class="titre_bloc">
                        <div class="picto_tutorat_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_tutorat.png') }}" alt="" /></div>
                        <div class="txt_titre_bloc"><p>Actualités</p></div>
                    </div>
                
                    <div class="bloc_contenu_actus">   
                        {% render 'OrchestraOrchestraBundle:News:liste'  with {'max' : '2'} %}
                    </div>
              </div>
   
        </div>
    
        <div id="bloc_evt">
                <div class="titre_bloc_3">
                    <div class="picto_evt"><img  height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_evt.png') }}" alt="" /></div>
                    <div class="txt_titre_bloc"><p>évènements à venir</p></div>
                </div>
                        {% render 'OrchestraOrchestraBundle:Evenement:miniListe' %}
        </div>
        
        <div id="bloc_portfolio">
            <div class="titre_bloc_1">
                <div class="picto_portfolio"><img  height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_galerie.png') }}" alt="" /></div>
                <div class="txt_titre_bloc"><p>Dernières images</p></div>
            </div>
            <div id="portfolio">
                        {% render 'OrchestraOrchestraBundle:Galerie:accueilListe' %}
            </div>
        </div>
        
        <div id="bloc_inscrits">
            <div class="titre_bloc_1">
                <div class="picto_profil"><img  height="18px" src="{{ asset ('bundles/orchestraorchestra/img/picto_profil.png') }}" alt="" /></div>
                <div class="txt_titre_bloc"><p>Derniers inscrits</p></div>
            </div>
            <div id="inscrits">
                        {% render 'OrchestraOrchestraBundle:User:dernierInscrit' %}
            </div>
        </div>
        
    </div>
</div>

{% endblock %}
