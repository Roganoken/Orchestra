{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_tutorat_index.css') }}" type="text/css" media="all" />
{% endblock %}


{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}


{% block contenu %}

<div id="contenu">
    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}
   <div id="content">  
  <div class="content_form_edit">  
  
      <div id="actions_gauche"> </div>
    
      <h1>Galerie {{ entity.intitule }}</h1>

{% if images|length != 0 %}
<table class="records_list">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Url</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in images %}
        <tr>
            <td>{{ entity.titre }}</td>
            <td><a href="{{ path('OrchestraOrchestraBundle_profil', { 'id': entity.user.id }) }}">{{ entity.user.firstname }} {{ entity.user.lastname }}</a></td>
            <td><a href="{{ path('galerie_image', { 'categorie': entity.media.id, 'id':entity.id }) }}"><img width="71" height="71" src="{{ ('image/' ~ entity.url) | apply_filter('image_small') }}" /></a></td>
            <td>{{ time_diff(entity.created) }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('galerie_image', { 'categorie': entity.media.id, 'id':entity.id }) }}">Voir</a>
                    </li>
                     {% if entity.user == app.security.getToken().getUser() or is_granted("ROLE_ADMIN") %}
                    <li>
                        <a href="{{ path('image_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                    {% endif %}
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
                        
                        <div class="navigation">
                            {{ knp_pagination_render(images) }}
                        </div>  
                        
{% else %}
Pas encore d'images
{% endif %}

<ul>
    <li>
        <a href="{{ path('galerie') }}">
            revenir
        </a>
    </li>
</ul>
      
    </div>
</div>
</div>

{% endblock %} 