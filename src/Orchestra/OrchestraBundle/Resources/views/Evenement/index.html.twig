{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_evenement_index.css') }}" type="text/css" media="all" />
{% endblock %}


{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}


{% block contenu %}

<div id="contenu">

    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}
  <div id="content">      
    <div class="content_form_edit">  
  
      <div id="actions_gauche">   
      
              <div class="bloc_tuto">
                    <div class="titre_bloc">
                        <div class="picto_evt_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_evt.png') }}" alt="" /></div>
                        <div class="txt_titre_bloc"><p>Evènements</p></div>
                    </div>
                    
                    <div class="bloc_contenu_tuto">   
                        {% if entities|length != 0 %}
                            {% for entity in entities %}
                                  <div class="records_list">
                                        <div class="intitule">{{ entity.title }}</div>
                                        <div class="date">le {{ entity.date| format_datetime(null, 'fr', 'Europe/Paris', constant('IntlDateFormatter::LONG'), constant('IntlDateFormatter::SHORT')) }}</div>
                                        
                                       <div id="contenu_evenement">
                                            <div class="img_evenement"><img src="{{ ('evenement/' ~ entity.image) | apply_filter('evenement_small') }}" height="140px;" width="140px;" /></div>
                                       
                                            <div class="txt_evenement">{{ entity.contenu }}</div>
                                            
                                       </div>
                                    
                                         <div class="ajout_par">par <a href="{{ path('OrchestraOrchestraBundle_profil', { 'id': entity.user.id }) }}">{{ entity.user.firstname }} {{ entity.user.lastname }}</a></div>
                                         
                                        {% if is_granted("ROLE_ADMIN") or entity.User == app.security.getToken().getUser() %}
                                           <div class="picto_modif_tuto"><a href="{{ path('evenement_edit', { 'id': entity.id }) }}"><img src="{{ asset ('bundles/orchestraorchestra/img/picto_modif_c.png') }}" alt="" /></a></div>
                                        {% endif %}

                                    </div>

                                {% endfor %}
                        {% else %}
                        Pas encore d'évènement
                        {% endif %}
                    </div>
                        
                </div>   
       </div>
       
       <div class="titre_bloc_ajout">
            <div class="picto_evt_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_evt.png') }}" alt="" /></div>
            <div class="txt_titre_bloc"><a href="{{ path('evenement_new') }}"><p>Ajouter un évènement</p></a></div>
        </div>
        
        <div class="titre_bloc_ajout">
            <div class="picto_evt_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_evt.png') }}" alt="" /></div>
            <div class="txt_titre_bloc"><a href="{{ path('evenement_historique') }}"><p>voir l'historique</p></a></div>
        </div>
       
   
   </div>
 </div>
</div>

{% endblock %} 
