{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_tutorat_index.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_news_index.css') }}" type="text/css" media="all" />
{% endblock %}


{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}


{% block contenu %}

<div id="contenu">

    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}
        
    <div class="content_form_edit">  
  
      <div id="actions_gauche">   
      
              <div class="bloc_tuto">
                    <div class="titre_bloc">
                        <div class="picto_tutorat_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_tutorat.png') }}" alt="" /></div>
                        <div class="txt_titre_bloc"><p>Evènements</p></div>
                    </div>
                    
                    <div class="bloc_contenu_tuto">   
                       {% if entities|length != 0 %}
                            {% for entity in entities %}
                                  <div class="records_list">
                                        <div class="intitule">{{ entity.title }}</div>
                                        <div class="picto_detail"><a href="{{ path('evenement_show', { 'id': entity.id }) }}"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_voir_profil_vide.png') }}" alt="" /></a></div>
                                       
                                        
                                       
                                        <div class="contenu_actu">{{ entity.contenu }}</div>
                                        
                                        {% if entity.created|date('Ymd') == "now"|date('Ymd') %}
                                        <div class="new">NEW</div>
                                        {% endif %}
                                    
                                        <div class="img_evenement">{{ entity.image }}</div>
                                    
                                        
                                        {% if is_granted("ROLE_ADMIN") or entity.User.id == app.security.getToken().getUser().getId() %}
                                           <div class="picto_modif_tuto"><a href="{{ path('evenement_edit', { 'id': entity.id }) }}"><img src="{{ asset ('bundles/orchestraorchestra/img/picto_modif.png') }}" alt="" /></a></div>
                                        {% endif %}
                                
                                        
                                    </div>
                                {% endfor %}
                        {% else %}
                        Pas encore d'évènement
                        {% endif %}
                    </div>
                </div>   
       </div>
       
       <div class="titre_bloc_ajout">
            <div class="picto_tutorat_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_tutorat.png') }}" alt="" /></div>
            <div class="txt_titre_bloc"><a href="{{ path('evenement_new') }}"><p>Ajouter un évènement</p></a></div>
        </div>
       
   
   </div>
</div>

{% endblock %} 
