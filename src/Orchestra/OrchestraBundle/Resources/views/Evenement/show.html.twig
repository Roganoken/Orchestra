{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include "OrchestraOrchestraBundle:Default:stylesheet.html.twig" %}
    <link rel="stylesheet" href="{{ asset('bundles/orchestraorchestra/css/style_evenement_index.css') }}" type="text/css" media="all" />
{% endblock %}


{% block header %}
    {% include "OrchestraOrchestraBundle:Default:header.html.twig" %}      
{% endblock %}


{% block contenu %}

<div id="contenu">

    {% include "OrchestraOrchestraBundle:Default:menu_gauche.html.twig" %}
  <div id="content">      
    <div class="content_form_edit">  
  
      <div id="actions_gauche">   
      
              <div class="bloc_tuto">
                    <div class="titre_bloc">
                        <div class="picto_tutorat_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_tutorat.png') }}" alt="" /></div>
                        <div class="txt_titre_bloc"><p>Evenement</p></div>
                    </div>
                    
                    <div class="bloc_contenu_tuto">

<table class="record_properties">
    <tbody>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Contenu</th>
            <td>{{ entity.contenu }}</td>
        </tr>
        <tr>
            <th>Auteur</th>
            <td>{{ entity.user.firstname }} {{ entity.user.lastname }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date| format_datetime(null, 'fr', 'Europe/Paris', constant('IntlDateFormatter::LONG'), constant('IntlDateFormatter::SHORT')) }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ time_diff(entity.created) }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{% if entity.updated %}{{ time_diff(entity.updated) }}{% else %}jamais{% endif %}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="{{ ('evenement/' ~ entity.image) | apply_filter('evenement_medium') }}" /></td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('evenement') }}">
            Revenir
        </a>
    </li>
    {% if entity.user == app.security.getToken().getUser() or is_granted("ROLE_ADMIN") %}
    <li>
        <a href="{{ path('evenement_edit', { 'id': entity.id }) }}">
            Modifier
        </a>
    </li>
    <li>
        <form action="{{ path('evenement_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Supprimer</button>
        </form>
    </li>
    {% endif %}
</ul>
                    </div>  
       </div>
       
       <div class="titre_bloc_ajout">
            <div class="picto_tutorat_titre"><img  src="{{ asset ('bundles/orchestraorchestra/img/picto_tutorat.png') }}" alt="" /></div>
            <div class="txt_titre_bloc"><a href="{{ path('evenement_new') }}"><p>Ajouter un évènement</p></a></div>
        </div>
       
   
   </div>
 </div>
</div>

{% endblock %} 
